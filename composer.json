{
    "name": "pras/typeapi-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "description": "TypeApi Impelementation For Symfony",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "psx/api": "^7.1",
        "symfony/framework-bundle": "^6.4|^7.0",
        "symfony/serializer": "^7.1"
    },
    "scripts": {
        "cs-fix": "./vendor/bin/php-cs-fixer fix src --allow-risky=yes",
        "cs": "./vendor/bin/php-cs-fixer check src --allow-risky=yes -vvv --diff",
        "phpstan": "./vendor/bin/phpstan"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Praswicaksono\\TypeApiBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Praswicaksono\\TypeApiBundle\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^11.3"
    }
}
